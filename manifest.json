{
    "name": "Media Scroll",
    "description": "A simple extension for scrolling social media without touching the device.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "offscreen"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "host_permissions": [
        "https://www.instagram.com/*"
    ],
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "icons/icon16.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "html/popup.html",
                "js/popup.js",
                "icons/icon16.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
}